<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/GlobalStyles.css" />
	
	<g:HTMLPanel>
		<div align="center" style="background-color:white; width:500px;">
			<g:DecoratorPanel>
				<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" width="500px">

					<g:HorizontalPanel styleName='{style.padding10T}'>
						<g:DecoratorPanel>
							<g:Label ui:field="tituloLabel">
							</g:Label>
						</g:DecoratorPanel>
						<g:Label styleName='{style.padding5RL}' horizontalAlignment="ALIGN_RIGHT">De</g:Label>
						<g:Hyperlink ui:field="linkUsuario" styleName='{style.padding10R}'>
						</g:Hyperlink>
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName='{style.padding10T}'>
						<g:FlowPanel ui:field="mapCanvas" width="500px" height="250px" ></g:FlowPanel>
					</g:HorizontalPanel>
					<g:ScrollPanel ui:field="descripcionScrollPanel"
						width="400px" height="100px" styleName='{style.desc}'>
					</g:ScrollPanel>

					<g:HorizontalPanel styleName='{style.padding10T}'>
						<g:PushButton ui:field="comentarButton">Comentar Ruta</g:PushButton>
						<g:PushButton ui:field="valorarButton">Valorar Ruta</g:PushButton>
					</g:HorizontalPanel>

				</g:VerticalPanel>
			</g:DecoratorPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 