<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/GlobalStyles.css" />
	
	<g:HTMLPanel>
		<div align="center" style="background-color:white; width:500px;">
			<g:DecoratorPanel>
				<g:VerticalPanel>
					<g:Label styleName="{style.tituloPopup}">ComentarRuta</g:Label>
					<g:Label>Comentario:</g:Label>
					<g:HorizontalPanel>
						<g:Label styleName="{style.padding5R}">comentario de</g:Label>
						<g:Label ui:field="labelUsuario"></g:Label>
					</g:HorizontalPanel>
					<g:TextArea ui:field="comentarioInput" width="300px"
						height="200px" />
					<g:HorizontalPanel styleName='{style.padding10T}'>
						<g:PushButton ui:field="enviarButton">Enviar</g:PushButton>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:DecoratorPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 